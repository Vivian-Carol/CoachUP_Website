<html lang="en">

<head>
    {{>header}}
    <style>
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container-fluid {
            height: 80vh;
        }

        .form-container {
            width: 80%;
            margin: auto;
            margin-top: 30px;
        }

        .form-group {
            width: 100%;
        }

        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>

<body>
    <section class="container-fluid d-flex align-items-center justify-content-center">
        <div class="mx-auto form-container">
            <h1 class="text-center" style="font-size: 30px;">Log In</h1>
            <form method="POST" action="/students/login">
                <div class="d-flex justify-content-center align-items-center">
                    <div class="form-group m-4">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="form-group m-4">
                        <label for="password">Password:</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Login" class="btn btn-primarymt-2" style="width: 20%; background-color: white; color: black;">
                </div>
            </form>
            <div class="text-center m-4">
                <a href="/students/signup" style="color: black;">Don't have an Account? Go to SignUp!</a>
            </div>
        </div>
        <section class="admin-link-container">
        <a href="/admin_login" class="admin-link d-flex mt-4 pt-4" style="color: black;">
            <i class="bi bi-person-fill-gear"></i>
            <p>I am an Admin</p>
        </a>
    </section>
    </section>


    <section class="footer">
        <footer class="bg-white">
            <div class="container text-left">
                <div class="py-4">
                    <a href="#" class="mx-2 text-dark p-2">Terms and Conditions</a>
                    <a href="#" class="mx-2 text-dark p-2">Privacy Policy</a>
                    <a href="#" class="mx-2 text-dark p-2">Facebook</a>
                    <a href="#" class="mx-2 text-dark p-2">Twitter</a>
                    <a href="#" class="mx-2 text-dark p-2">Instagram</a>
                </div>
            </div>
        </footer>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>