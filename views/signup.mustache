<head>
    {{>header}}
</head>
<body style="margin: 0; padding: 0; box-sizing: border-box; overflow-y: auto; height: 100%;">
    <section class="container-fluid d-flex align-items-center justify-content-center">
        <div class="mx-auto" style="width: 70%;">
            <h1 class="text-center" style="font-size: 30px;">Sign Up</h1>
            <form method="POST" action="/students/signup">
                <div class="form-group">
                    <label for="firstname">First Name:</label>
                    <input type="text" class="form-control" id="firstname" name="firstname" required style="width: 100%;">
                </div>
                <div class="form-group">
                    <label for="lastname">Last Name:</label>
                    <input type text class="form-control" id="lastname" name="lastname" required style="width: 100%;">
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" required style="width: 100%;">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" id="password" name="password" required style="width: 100%;">
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password:</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required style="width: 100%;">
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Sign Up" class="btn btn-primary mt-2" style="width: 20%; background-color: white; color: black;">
                </div>
            </form>
            <div class="text-center">
                <a href="/students/login" style="color: black;">Already have an account? Go to Log in</a>
            </div>
        </div>
    </section>

    <div class="modal fade" id="emailExistsModal" tabindex="-1" role="dialog" aria-labelledby="emailExistsModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="emailExistsModalLabel">Email Already Exists</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Email already in use. Please choose another.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <section class="section mt-4 mb-0">
        <footer class="bg-white" style="position: fixed; bottom: 0; width: 100%;">
            <div class="container text-left">
                <div class="py-4">
                    <a href="#" class="mx-2 text-dark p-2">Terms and Conditions</a>
                    <a href="#" class="mx-2 text-dark p-2">Privacy Policy</a>
                    <a href="#" class="mx-2 text-dark p-2">Facebook</a>
                    <a href="#" class="mx-2 text-dark p-2">Twitter</a>
                    <a href="#" class="mx-2 text-dark p-2">Instagram</a>
                </div>
            </div>
        </footer>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>
