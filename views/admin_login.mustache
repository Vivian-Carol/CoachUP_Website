<head>
    {{>header}}
    <style>
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container-fluid {
            height: 80vh;
        }

        .form-container {
            width: 80%;
            margin: auto;
            margin-top: 30px;
        }

        .form-group {
            width: 100%;
        }

        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>

<body>
    <section class="container-fluid d-flex align-items-center justify-content-center">
        <div class="mx-auto form-container">
            <h1 class="text-center" style="font-size: 30px;">Admin LogIn</h1>
            <form method="POST" action="/admin/login_page">
                <div class="d-flex justify-content-center align-items-center">
                    <div class="form-group m-4">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="form-group m-4">
                        <label for="password">Password:</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Login" class="btn btn-primarymt-2" style="width: 20%; background-color: white; color: black;">
                </div>
            </form>
        </div>
    </section>
    

    <section class="footer">
        <footer class="bg-white">
            <div class="container text-left">
                <div class="py-4">
                    <a href="#" class="mx-2 text-dark p-2">Terms and Conditions</a>
                    <a href="#" class="mx-2 text-dark p-2">Privacy Policy</a>
                    <a href="#" class="mx-2 text-dark p-2">Facebook</a>
                    <a href="#" class="mx-2 text-dark p-2">Twitter</a>
                    <a href="#" class="mx-2 text-dark p-2">Instagram</a>
                </div>
            </div>
        </footer>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>

</html>